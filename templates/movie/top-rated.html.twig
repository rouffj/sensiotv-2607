                <div class="col-lg-9 table-responsive img-rounded bg-light p-3">
                    <table id="top-rated-movie-table" class="table table-hover table-striped tablesorter tablesorter-bootstrap">
                        <thead>
                        <tr>
                            <th class="sr-only"></th>
                            <th>Rank &amp; Title</th>
                            <th>IMDb Rating</th>
                            <th>Price</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for movie in movies %}
                        <tr>
                            <td><img src="{{ movie.Poster }}" width="45" height="67" alt="Les évadés"></td>
                            <td>{{ loop.index }}. <a href="{{ path('movie_details', {imdbId: movie.imdbID}) }}" title="{{ movie.Title }}">{{ movie.Title }} </a><span class="text-muted">({{ movie.Year }})</span></td>
                            <td><strong title="9,2 based on 2 166 947 user ratings"><i class="fas fa-star text-warning"></i> 9,2</strong></td>
                            <td><span class="badge badge-dark">4,99 €</span></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
